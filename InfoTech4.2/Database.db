go

create procedure insertUsuario
@userLogin varchar(1000),
@senha    varchar(1000),
@nome varchar(1000),
@sobrenome varchar(1000),
@rg  varchar(1000),
@cpf  varchar(1000),
@cep  varchar(1000),
@endereco varchar(1000) ,
@estado varchar(1000),
@bairro varchar(1000),
@numero varchar(1000),
@cidade varchar(1000),
@telefone varchar(1000),
@celular  varchar(1000),
@vsalario  varchar(1000),
@email varchar(1000),
@graudeConclusao varchar(1000),
@dataNascimento  varchar(1000),
@sexo int ,
@funcao int ,
@setor  int ,
@grauEscolar int ,
@atividade int
as
begin
insert into 
Usuario(nome,sobrenome,rg,		cpf,cep,  endereco,estado,  bairro,numero,cidade,telefone,celular,salario,email,graudeConclusao,grauEscolar,dataNascimento,sexo,funcao,setor, atividade)
